{
  "manifest_version": 3,
  "name": "LeetCode On The Go",
  "version": "1.0",
  "description": "Solve LeetCode problems on mobile by writing solutions in English.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://leetcode-chrome-extension.vercel.app/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
